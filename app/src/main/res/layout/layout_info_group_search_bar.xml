<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="@dimen/padding_search_bar"
                android:paddingRight="17dp"
                android:paddingTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_vector_search"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/search_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ease_seabar_input"
            android:drawableLeft="@drawable/ease_search_bar_icon_normal"
            android:hint="搜索群组"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:padding="4dp"
            android:textSize="13sp"/>
    </LinearLayout>

</RelativeLayout>
