<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_edit_enterprise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lshl.ui.me.activity.EditEnterpriseActivity">
        <include layout="@layout/app_layout_title"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/background_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="企业名称:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:paddingLeft="15dp"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                   style="@style/gray_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="企业类型:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/type" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="企业地址:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:background="@null"
                        android:id="@+id/address"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="注册资金:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText

                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:background="@null"
                        android:id="@+id/money"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="成立日期:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:id="@+id/time"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="营业期限:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qixian" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textBlackColor"
                        android:text="社会统一信用代码:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@null"
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:paddingLeft="15dp"
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingBottom="8dp"
                        android:textColor="@color/textBlackColor"
                        android:text="经营范围:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textSize="14sp"
                        android:textColor="@color/textBlackColor"
                        android:gravity="start"
                        android:padding="10dp"
                        android:background="@drawable/bg_solid_gray"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/fanwei" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <LinearLayout
                    android:id="@+id/ll_zhizhao"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingBottom="10dp"
                        android:textColor="@color/textBlackColor"
                        android:text="营业执照"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@mipmap/account_logo"
                        android:id="@+id/image"
                        android:scaleType="centerCrop"
                        android:layout_width="200dp"
                        android:layout_height="140dp" />
                </LinearLayout>
                <View
                    style="@style/gray_line"/>
                <Button
                    style="@style/red_button"
                    android:text="修改更多资料"
                    android:id="@+id/more"
                    android:textColor="@color/background_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/TenDpGrayView"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>
