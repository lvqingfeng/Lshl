<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_recruit_details"
        android:layout_width="match_parent"
        android:background="@color/background_white"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lshl.ui.appliance.job.RecruitDetailsActivity">
        <include layout="@layout/app_layout_title"/>
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:textSize="16sp"
                    android:textColor="@color/textBlackColor"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/money"
                    android:textSize="16sp"
                    android:textColor="@color/textBlueColor"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/company_name"
                    android:textColor="@color/textBlackColor"
                    android:padding="10dp"
                    android:drawableRight="@drawable/ic_vector_right_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/time"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/num_look"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/OneDpGrayView"/>
                <TextView
                    android:background="@color/windowBackgroundColor"
                    android:padding="10dp"
                    android:textColor="@color/textBlackColor"
                    android:text="工作地址"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="10dp"
                    android:maxLines="1"
                    android:id="@+id/address"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="工作要求"
                    android:textIsSelectable="true"
                    android:background="@color/windowBackgroundColor"
                    android:textSize="16sp"
                    android:textColor="@color/textBlackColor"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/demand"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="职位描述"
                    android:background="@color/windowBackgroundColor"
                    android:textSize="16sp"
                    android:textColor="@color/textBlackColor"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/info"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_contact"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:padding="5dp"
                android:drawableTop="@drawable/ic_vector_recruit_phone"
                android:text="电话"
                android:gravity="center"
                android:background="#00b7ee"
                android:layout_weight="1"
                android:textColor="@color/background_white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/phone" />

            <View
                android:background="@color/windowBackgroundColor"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/talk"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_vector_recruit_talk"
                android:text="交谈"
                android:gravity="center"
                android:background="#448aca"
                android:layout_weight="1"
                android:textColor="@color/background_white"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</layout>
