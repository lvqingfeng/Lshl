<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data class="TradeGoodsSearchBarBinding"></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackgroundColor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="@dimen/padding_search_bar"
            android:paddingRight="7dp"
            android:paddingTop="7dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_solid_gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_vector_search" />

                <EditText
                    android:id="@+id/edit_goods_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:hint="请输入您要搜索的商品关键字"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>


</layout>