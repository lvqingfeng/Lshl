<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/windowBackgroundColor"
        tools:context="com.lshl.ui.info.activity.AddFriendActivity">
        <include layout="@layout/app_layout_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/background_white"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/textBlackColor"
                android:padding="15dp"
                android:text="您需要发送验证申请,等待对方通过"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/reasonss"
                android:textSize="14sp"
                android:padding="10dp"
                android:lines="1"
                android:maxLength="30"
                android:layout_margin="5dp"
                android:hint="让别人更容易认识你"
                android:background="@drawable/bg_solid_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_commit"
                android:text="发送请求"
                style="@style/red_button" />
        </LinearLayout>
    </LinearLayout>
</layout>
