<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="presenter"
            type="com.lshl.ui.me.activity.TimelyRainActivity.Presenter"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_timely_rain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lshl.ui.me.activity.TimelyRainActivity">
        <include layout="@layout/app_layout_title"/>

        <ImageView
            android:src="@mipmap/banner"
            android:scaleType="fitXY"
            android:id="@+id/vp_timely_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_timely"
            app:tabIndicatorColor="@android:color/holo_red_dark"
            app:tabSelectedTextColor="@android:color/holo_red_light"
            app:tabTextColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_timely_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>
