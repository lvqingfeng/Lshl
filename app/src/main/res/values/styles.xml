<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BaseColor</item>
        <item name="colorPrimaryDark">@color/BaseColor</item>
        <item name="colorAccent">@color/BaseTopColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>

    <style name="TextViewMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textBlackColor</item>
    </style>
    <!--大的按钮（适用于登录或注册）-->

    <style name="big_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>

    </style>
    <!--自定义灰色线条-->
    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ccc</item>
    </style>
    <!--10dp的灰线-->
    <style name="TenDpGrayView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/windowBackgroundColor</item>
    </style>
    <!--1dp的灰线-->
    <style name="OneDpGrayView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/windowBackgroundColor</item>
    </style>
    <!--用来填补空白的控件-->
    <style name="weight_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style><!--小按钮-->
    <style name="small_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--  PopWindow的动画 -->
    <style name="PopWindow_x_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_x_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_x_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!--  PopWindow的动画 -->
    <style name="PopWindow_y_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_y_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_y_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="ApplianceMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--用来填补空白的控件-->
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableRight">@drawable/ic_vector_right_go</item>
        <item name="android:textColor">#333</item>
    </style>
    <!--个人资料中的Textview样式-->
    <style name="PersonDataTextView">
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ApplianceMenuItemLayout">
        <item name="android:background">#ffffff</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ApplianceMenuImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppLiceMenuLLStyle">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppRightImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ApplianceMenuText">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#f000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MeMenuText">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TradeScreenAttrItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/trade_screen_attr_select</item>
    </style>

    <style name="EditCenterBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BaseDataTextView">
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EitTextBaseStyle">
        <item name="android:textColor">#f5f5f5</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="MyWealthImageStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BaseLinerLayoutStyle">
        <item name="android:background">@color/background_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyWealthTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <!--红色背景的长Button-->
    <style name="RedButton">
        <item name="android:background">@drawable/bg_blue_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">"保 存"</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SetTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NewMessageLLStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#fff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="securityTextViewStyle">
        <item name="android:background">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="PayItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AddEnterpriseLL">
        <item name="android:background">@color/background_white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!--底部有长又红的Button的样式-->
    <style name="red_button">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_blue_btn</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--发现里面TextView的样式-->
    <style name="FaXianBigTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FaXianLLStyle">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FaXianInfoTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="AddContactBtStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>
